<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/backgrndmenu"
        tools:context=".Product_activity">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:id="@+id/textViewProdutos"
            android:text="Produtos"
            android:textSize="46sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:id="@+id/product_name"
            android:hint="Nome do Produto"
            android:textSize="18dp"
            android:inputType="text"
            android:layout_margin="15dp"
            android:background="@drawable/lavander_border"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:id="@+id/product_unit"
            android:hint="Unidade"
            android:textSize="18dp"
            android:inputType="text"
            android:layout_margin="15dp"
            android:background="@drawable/lavander_border"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingLeft="10dp"
            android:id="@+id/product_quantity"
            android:hint="Quantidade"
            android:textSize="18dp"
            android:inputType="numberDecimal"
            android:layout_margin="15dp"
            android:background="@drawable/lavander_border"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="50dp"
            android:padding="20dp">


            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/product_btnRegisterproduct"
                android:text="Register product"
                android:textStyle="bold"
                android:background="@drawable/lavander_border"
                android:layout_margin="15dp"/>

            <Button
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/product_btnlist"
                android:text="list products"
                android:textStyle="bold"
                android:background="@drawable/lavander_border"
                android:layout_margin="15dp"/>

        </LinearLayout>

    </LinearLayout>

    </ScrollView>



</LinearLayout>